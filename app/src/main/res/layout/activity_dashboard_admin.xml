<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DashboardAdminActivity">

    <ImageView
        android:id="@+id/back_arrow_dashboard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/abc_vector_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow_dashboard" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/dashboard_title">

        <!-- Card: Cantidad de Vehículos -->
        <com.google.android.material.card.MaterialCardView style="@style/DashboardCard">
            <LinearLayout style="@style/DashboardCardContent">
                <TextView style="@style/DashboardCardTitle" android:text="Cantidad de Vehículos" />
                <TextView android:id="@+id/tvTotalVehiculos" style="@style/DashboardCardValue" tools:text="15" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Vehículos Disponibles -->
        <com.google.android.material.card.MaterialCardView style="@style/DashboardCard">
            <LinearLayout style="@style/DashboardCardContent">
                <TextView style="@style/DashboardCardTitle" android:text="Vehículos Disponibles" />
                <TextView android:id="@+id/tvVehiculosDisponibles" style="@style/DashboardCardValue" tools:text="8" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Reservas Activas -->
        <com.google.android.material.card.MaterialCardView style="@style/DashboardCard">
            <LinearLayout style="@style/DashboardCardContent">
                <TextView style="@style/DashboardCardTitle" android:text="Reservas Activas" />
                <TextView android:id="@+id/tvReservasActivas" style="@style/DashboardCardValue" tools:text="5" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Reservas Pendientes -->
        <com.google.android.material.card.MaterialCardView style="@style/DashboardCard">
            <LinearLayout style="@style/DashboardCardContent">
                <TextView style="@style/DashboardCardTitle" android:text="Reservas Pendientes" />
                <TextView android:id="@+id/tvReservasPendientes" style="@style/DashboardCardValue" tools:text="2" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>