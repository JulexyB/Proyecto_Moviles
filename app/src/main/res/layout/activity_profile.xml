<?xml version="1.0" encoding="utf-8"?>
<!-- Contenedor principal que permite posicionar vistas de forma flexible. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ProfileActivity">

    <!-- ScrollView permite que el contenido se pueda desplazar si no cabe en la pantalla. -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LinearLayout organiza las vistas una debajo de la otra (vertical). -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título principal de la pantalla. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="24dp" />

            <!-- Contenedor para la imagen de perfil y el botón de cambio. -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <!-- ImageView para mostrar la foto de perfil del usuario. -->
                <ImageView
                    android:id="@+id/imageViewProfilePicture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circular_image_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="Foto de Perfil" />

                <!-- Botón flotante para cambiar la foto de perfil. -->
                <ImageButton
                    android:id="@+id/buttonChangePhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_camera"
                    android:background="@drawable/circle_button_teal"
                    android:elevation="4dp"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="@id/imageViewProfilePicture"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewProfilePicture"
                    android:contentDescription="Cambiar Foto"
                    app:tint="@color/black" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Subtítulo para la sección de información. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información Personal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Campo para el Correo (deshabilitado para edición). -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo Electrónico"
                    android:inputType="textEmailAddress"
                    android:enabled="false"
                    android:focusable="false"
                    tools:text="usuario@ejemplo.com" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo para el Nombre. -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextProfileFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo para el Apellido. -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextProfileLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    android:inputType="textPersonName"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo para la Fecha de Nacimiento. -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextProfileBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Nacimiento"
                    android:inputType="date"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo para el Teléfono. -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="32dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    android:inputType="phone"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón principal para cambiar entre modo "Editar" y "Guardar". -->
            <Button
                android:id="@+id/buttonEditSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:padding="16dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
