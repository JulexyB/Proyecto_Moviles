<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageViewVehicle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_image_background"
            android:contentDescription="Foto del Vehículo"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_car_logo" />

        <TextView
            android:id="@+id/textViewMarcaModelo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewVehicle"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Toyota Corolla (2023)" />

        <TextView
            android:id="@+id/textViewVehiculoCiudad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewMarcaModelo"
            app:layout_constraintTop_toBottomOf="@+id/textViewMarcaModelo"
            tools:text="Quito" />

        <TextView
            android:id="@+id/textViewTipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#555555"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewMarcaModelo"
            app:layout_constraintTop_toBottomOf="@id/textViewVehiculoCiudad"
            tools:text="Tipo: Sedan - Color: Rojo" />

        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/design_default_color_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewMarcaModelo"
            app:layout_constraintTop_toBottomOf="@id/textViewTipo"
            tools:text="$45.00 / día" />

        <LinearLayout
            android:id="@+id/layoutOwnerActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewVehicle"
            tools:visibility="visible">

            <Button
                android:id="@+id/buttonEditVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Editar"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF9800"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:id="@+id/buttonDeleteVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar"
                android:backgroundTint="@android:color/holo_red_dark"
                style="@style/Widget.AppCompat.Button.Colored" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>